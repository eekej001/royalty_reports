<% content_for :javascript do %>
  <script type="text/javascript">
    ShopifyApp.ready(function(){
      ShopifyApp.Bar.initialize({
        title: "Home",
        icon: "<%= asset_path('favicon.ico') %>"
      });
    });
  </script>
<% end %>

<head>
  <%= stylesheet_link_tag "application", :media => "all" %>

  <%= javascript_include_tag "jquery.slim.min", "tether.min", "bootstrap.min" %>
</head>

<style>
   #featured .carousel-item img {
   	  /*width: 100%;
   	  height: 100%;
   	  */
   	   width: 600px;
   	  height: 400px; 
   }

  .carousel-inner{
	  max-width:600px;
	  max-height: 400px;
  }

  .carousel{
	  max-width:600px;
	  max-height: 400px;
  }


  p, h3 {
  	font-weight: bold;
  	text-shadow: 2px 2px #000000;
  }

</style>

    
    <div class="container">

      <div class="carousel slide mx-auto" id="featured" data-ride="carousel">
        <ol class="carousel-indicators">
           <li data-target="#featured" data-slide-to="0" class="active">
           <li data-target="#featured" data-slide-to="1">
           <li data-target="#featured" data-slide-to="2">
           <li data-target="#featured" data-slide-to="3">
        </ol>
        <div class="carousel-inner">
            <div class="carousel-item active">
	          <%= image_tag("artist.jpg", :class => "d-block img-fluid", :title => "Artist", :alt => "Artist") %>
	          <div class="carousel-caption">
	             <%= link_to :controller => 'artists', :action => 'index' do %>
                     <h3 class="text-info">Artists</h3>
                    <% end %>
	             <p class="text-info">Add artists to the database.</p>
	          </div>
	        </div> <!--carousel-item-->
	        <div class="carousel-item">
	           <%= image_tag("titles.jpg", :class => "d-block img-fluid", :title => "Titles", :alt => "Titles") %>
	           <div class="carousel-caption">
	             <%= link_to :controller => 'titles', :action => 'index' do %>
                     <h3 class="text-danger">Titles</h3>
                    <% end %>
	             <p class="text-danger">Add titles for each artist.</p>
	          </div>
	        </div> <!--carousel-item-->  
	        <div class="carousel-item">
	           <%= image_tag("sales.jpg", :class => "d-block img-fluid", :title => "Sales", :alt => "Sales") %>
	           <div class="carousel-caption">
	             <%= link_to :controller => 'sales', :action => 'index' do %>
                     <h3 class="text-success">Sales</h3>
                    <% end %>
	             <p class="text-success">View sales based on artist or title.</p>
	          </div>
	        </div> <!--carousel-item--> 
	        <div class="carousel-item">
	          <%= image_tag("reports.jpg", :class => "d-block img-fluid", :title => "Reports", :alt => "Reports") %>
	          <div class="carousel-caption">
	             <%= link_to :controller => 'reports', :action => 'index' do %>
                     <h3 class="text-info">Reports</h3>
                    <% end %>
	             <p class="text-info">Manually generate a royalty report.</p>
	          </div>
	        </div> <!--carousel-item--> 
        </div> <!--carousel-inner-->
        <a class="carousel-control-prev" href="#featured" role="button" data-slide="prev">
           <span class="carousel-control-prev-icon" aria-hidden="true">
           	   <span class="sr-only">Previous</span>
           </span>
        </a>
        <a class="carousel-control-next" href="#featured" role="button" data-slide="next">
           <span class="carousel-control-next-icon" aria-hidden="true">
           	   <span class="sr-only">Next</span>
           </span>
        </a>

      </div>  <!--carousel-->

    	

    </div>

</br>

