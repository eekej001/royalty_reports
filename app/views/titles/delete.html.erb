<head>
  <%= stylesheet_link_tag 'bootstrap.min' %>

  <%= javascript_include_tag "bootstrap.min", "jquery.slim.min", "tether.min" %>
</head>

<%= link_to("<< Back to Title List", {:action => 'index'}, :class => 'back-link') %>

<div class="titles delete">
  <h2>Delete Title</h2>

  <%= form_for(:title, :url => {:action => 'destroy', :id => @title.id}) do |f| %>

    <p>Are you sure you want to permanently delete this title?</p>
    <p class="reference-name"><%= @title.e_title %></p>
    
    <div class="form-buttons">
      <%= submit_tag("Delete Title") %>
    </div>
  <% end %>
</div>   