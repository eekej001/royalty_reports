<head>
  <%= stylesheet_link_tag "application", :media => "all" %>

  <%= javascript_include_tag  "jquery.slim.min", "tether.min", "bootstrap.min", "pagination" %>
</head>

<%= link_to :controller => 'artists', :action => 'show', :id => @artist.id do %>
  <button type="button" class="btn btn-info">Back to Artist</button>
<% end %>

<h1><%= @artist.e_name %>'s Titles</h1>

<div class="sort_paginate_ajax"><%= render 'titles_display' %></div>


<h2>Add a Title</h2>

<div class="container">
  <%= form_for(:title, :url => {:controller => 'titles', :action => 'create', :id => @artist.id, :path_marker => @path_marker}) do |f| %>
  <table>
    
    <%= f.hidden_field :artist_id, :value => @artist.id %>


   <tr>
      <td><%= f.label(:e_title, "English Title") %></td>
      <td><%= f.text_field(:e_title) %></td>
   </tr>


   <tr>
      <td><%= f.label(:j_name, "Japanese Title") %></td>
      <td><%= f.text_field(:j_title) %></td>
   </tr>

   <tr>
      <td><%= f.label(:srp, "SRP") %></td>
      <td><%= f.text_field(:srp) %></td>
   </tr>

    <tr>
      <td>&nbsp;</td>
      <td><%= submit_tag("Submit") %></td>
    </tr>
  </table>
  <% end %> 
</div> <!--end container -->

<script type="text/javascript">
  $(document).ready(function(){
     var thead_width = $("thead.table-info").width();    
     $('table.table').css('width', thead_width);
  });
  
</script>