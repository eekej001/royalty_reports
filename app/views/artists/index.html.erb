<head>
  <%= stylesheet_link_tag "application", :media => "all" %>

  <%= javascript_include_tag "bootstrap.min", "jquery.slim.min", "tether.min" %>
</head>

<style>
 
</style>


<%= link_to :controller => 'home', :action => 'index' do %>
  <button type="button" class="btn btn-info">Back to Main Menu</button>
<% end %>

<h1>Artists</h1>
<div class="container">
  <table class="table table-responsive table-striped table-hover mx-auto">
   <thead class="table-info">
    <tr>
      <th scope="col">#</th>
      <th scope="col">English Name</th>
      <th scope="col">Japanese Name</th>
      <th scope="col">Email</th>
      <th scope="col">Titles</th>
      <th scope="col">Sales</th>
      <th scope="col"></th>
      <th scope="col"></th>
    </tr>
   </thead> 
    <% @artists.each_with_index do |artist, index| %>
    <tr>
    <th scope="row"><%= index + 1 %></th>
    <td><%= link_to(artist.e_name, {:action => 'show', :id => artist.id}, :class => 'action show') %></td>
    <td><%= artist.j_name %></td>
    <td><%= artist.email %></td>
    <td><%= artist.titles.count %></td>
    <td><%= artist.sales.count %></td>
    <td><%= link_to :action => 'edit', :title => 'Edit', :id => artist.id do %>
            <span class="glyphicon glyphicon-edit text-warning"></span>
        <% end %>
    </td>
    <td><%= link_to :action => 'delete', :title => 'Delete', :id => artist.id do %>
            <span class="glyphicon glyphicon-edit text-danger"></span>
        <% end %>
    </td>
    </tr>
    <% end %>
  </table>


 <p><%= @artists.count %> Results</p> 
 </div>
</br>
</br>
</br>

<h2>Add An artist</h2>

<div>
  <%= form_for(:artist, :url => {:action => 'create'}) do |f| %>
  <table>
   <tr>
      <td><%= f.label(:e_name, "English Name") %></td>
      <td><%= f.text_field(:e_name) %></td>
   </tr>


   <tr>
      <td><%= f.label(:j_name, "Japanese Name") %></td>
      <td><%= f.text_field(:j_name) %></td>
   </tr>

   <tr>
      <td><%= f.label(:email, "Email") %></td>
      <td><%= f.text_field(:email) %></td>
   </tr>

    <tr>
      <td>&nbsp;</td>
      <td><%= submit_tag("Submit") %></td>
    </tr>
  </table>
  <% end %> 
</div>