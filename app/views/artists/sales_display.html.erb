<head>
  <%= stylesheet_link_tag 'bootstrap.min' %>

  <%= javascript_include_tag "bootstrap.min", "jquery.slim.min", "tether.min" %>
</head>


<%= link_to("<< Back to Artist", {:controller => 'artists', :action => 'show', :id => @artist.id}, :class => 'back-link') %>

<h1>@artist.e_name Sales</h1>

<ul>
  
  <table>
    <tr>
      <th>Title</th>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Email</th>
      <th>Format</th>
      <th>Price</th>

    </tr>
    <% @sales.each do |sale| %>
    <tr>
    <td><%= sale.title.e_title %></td>
    <td><%= sale.first_name %></td>
    <td><%= sale.last_name %></td>
    <td><%= sale.email %></td>
    <td><%= sale.format %></td>
    <td><%= sale.price %></td>
    </tr>
    <% end %>
  </table>

</ul>


</br>

