<head>
  <%= stylesheet_link_tag "application", :media => "all" %>

  <%= javascript_include_tag "bootstrap.min", "jquery.slim.min", "tether.min" %>
</head>

<%= link_to :controller => 'artists', :action => 'show', :id => @artist.id do %>
  <button type="button" class="btn btn-info">Back to Artist List</button>
<% end %>

<div class="artists delete">
  <h2>Delete Artist</h2>

  <%= form_for(:artist, :url => {:action => 'destroy', :id => @artist.id}) do |f| %>

    <p>Are you sure you want to permanently delete this artist?</p>
    <p class="reference-name text-danger"><%= @artist.e_name %></p>
    
    <div class="form-buttons">
      <%= submit_tag("Delete Artist") %>
    </div>
  <% end %>
</div>   