<head>
  <%= stylesheet_link_tag "application", :media => "all" %>

  <%= javascript_include_tag "bootstrap.min", "jquery.slim.min", "tether.min" %>
</head>

<%= link_to :controller => 'artists', :action => 'titles_display', :id => @title.id do %>
   <button type="button" class="btn btn-info">Back to Title List</button>
<% end %>

<div class="titles delete">
  <h2>Delete <span style="font-weight:bold"><%= @title.e_title %></span></h2>

  <%= form_for(:title, :url => {:action => 'title_destroy', :id => @title.id}) do |f| %>

    <p>Are you sure you want to permanently delete this title?</p>
    <p class="reference-name text-danger"><%= @title.e_title %></p>
    
    <div class="form-buttons">
      <%= submit_tag("Delete Title") %>
    </div>
  <% end %>
</div>   